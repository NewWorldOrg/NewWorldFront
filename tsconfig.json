{
  "compilerOptions": {
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "resolveJsonModule": true,
    "outDir": "./dist/",
    "sourceMap": true,
    "strict": true,
    "noImplicitReturns": true,
    "lib": ["es2015", "es2016", "es2017", "es2018", "es2019", "es2020", "esnext","dom"],
    "moduleResolution": "node",
    "module": "esnext",
    "target": "ESNext",
    "baseUrl": "./src/",
    "jsx": "preserve",
    "skipLibCheck": true,
    "paths": {
      "@": ["src"]
    }
  },
  "typeRoots": ["node_modules/@types", "type/*.d.ts"],
  "includes": ["src/**/*.ts", "src/**/*.tsx"]
}